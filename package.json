{
  "name": "widjet-json-form",
  "version": "1.0.0",
  "description": "A widget to generate forms using a json object descriptor",
  "main": "lib/index.js",
  "jsnext:main": "src/index.es6",
  "scripts": {
    "test": "nyc mocha --timeout 5000 --recursive --compilers js:babel-register test/**/*.es6 test/*.es6",
    "lcov_report": "nyc report --reporter=lcov",
    "coverage": "npm run lcov_report && codecov",
    "babel": "babel src --out-dir lib",
    "standard": "standard src/*.es6 test/*.es6",
    "esdoc": "esdoc -c esdoc.json",
    "prepublish": "npm run babel",
    "start": "widjet-test-server test/**/*-test.es6"
  },
  "keywords": [
    "widgets",
    "widget",
    "web",
    "widjet",
    "form",
    "json form"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/abe33/widjet-json-form.git"
  },
  "bugs": "http://github.com/abe33/widjet-json-form/issues",
  "commits": "http://github.com/abe33/widjet-json-form/commits",
  "author": "Cédric Néhémie <cedric.nehemie@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "babel-preset-stage-2": "^6.13.0",
    "babel-register": "6.14.0",
    "codecov": "^1.0.0",
    "esdoc": "^0.4.0",
    "expect.js": "^0.3.1",
    "mocha": "^3.0.0",
    "mocha-jsdom": "^1.1.0",
    "nyc": "^8.3.0",
    "sinon": "^1.17.4",
    "standard": "^5.4.1",
    "widjet-test-utils": "^1.7.4"
  },
  "dependencies": {
    "babel-cli": "^6.3.17",
    "babel-preset-es2015": "^6.3.13",
    "widjet": "^1.0.0",
    "widjet-utils": "^0.3.0",
    "widjet-disposables": "*"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "it",
      "describe",
      "beforeEach",
      "afterEach"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      ["transform-es2015-classes", {"loose": true}],
      "transform-es3-member-expression-literals",
      "transform-es3-property-literals"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "include": [
      "src/*.es6"
    ],
    "extension": [
      ".es6"
    ],
    "require": [
      "babel-register"
    ]
  }
}
